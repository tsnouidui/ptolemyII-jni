/* Standard elements */

html {
	/* Specify root element size as a percentage due to IE problem with ems. */
	font-size: 100%; /* Typically 16px */
}

body {
	/* Specify body font size as a percentage due to IE problem with ems. */
	font-size: 100%; /* Typically 16px */
}

button {
	font-size: 1.1em;
}

h1 {
	/* Remaining fonts specified relative to containing element's font size */
	font-family: sans-serif;
	font-size: 1.5em; /* 24px / 16px */
	padding-left: 2%;
}

h3 {
	/* Remaining fonts specified relative to containing element's font size */
	font-family: sans-serif;
	font-size: 1em; /* 24px / 16px */
}


li {
	padding-left: 2%;
	padding-right: 2%;

}

ul {
	list-style-type: none;
	padding: 0px;
}

/* Colors */
*[data-role="header"] {
	border: 1px solid #667396 /*{b-bar-border}*/;
	background: #5e7aa9 /*{b-bar-background-color}*/;
	color: #ffffff /*{b-bar-color}*/;
	font-weight: bold;
}


/* Custom classes */
.aside {
	float: left;
	width: 40%;
	padding-top: 1%;
	padding-left: 4%;
	font-family: sans-serif;
}

.buttonholder {
	padding-top: 2%;
	text-align: center;
}

.litext {
	padding-left: 46px;
	padding-top: 8px;
	padding-bottom: 14px; 
}

/* FIXME:  Width is currently set to accommodate width of grid in pixels.  
   Support variable-size grid.
   */
.main {
	float: left;
	width: 451px;
	padding-top: 2%;
	padding-left: 2%;
